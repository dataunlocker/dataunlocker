{
  "compilerOptions": {
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "removeComments": false,
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/utils": ["./src/lib/utils/index.js"],
      "@/*": ["./src/lib/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
